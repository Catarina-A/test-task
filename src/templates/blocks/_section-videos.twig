<div class="videos bg-container" id="videos">
  {{ lines.vertical(true) }}
  <div class="videos__bg bg-container__bg"></div>
  <div class="container">
    <div class="simple-slider">
      <div class="simple-slider__heading">
        <div class="simple-slider__text">
          <h2 class="title title--white-text">VIEW OUR LATEST <br>EVENT VIDEOS</h2>
        </div>
        <div class="simple-slider__controls">
          <div class="horizontal-controls">
            <div class="swiper-pagination--blue" id="videos-slider-pagination"></div>
            <div class="horizontal-controls__arrows">
              <button class="horizontal-controls__arrow horizontal-controls__arrow--blue-hover horizontal-controls__prev" id="videos-slider-prev">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14 20">
                  <path d="M5.6 0v14.7L0 9.1V13l7 7 7-6.9v-4l-5.6 5.6V0H5.6z"/>
                </svg>
              </button>
